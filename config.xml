<?xml version="1.0" encoding="utf-8"?>
<widget xmlns:cdv="http://cordova.apache.org/ns/1.0" xmlns:vs="http://schemas.microsoft.com/appx/2014/htmlapps" id="io.cordova.bussed" version="0.1.0.0" xmlns="http://www.w3.org/ns/widgets">
  <name>Bussed</name>
  <description>Real-time bus information and tracking</description>
  <author href="http://cordova.io" email="dev@cordova.apache.org">Shane Breatnach</author>
  <content src="index.html" />
  <access origin="*" />
  <preference name="SplashScreen" value="screen" />
  <preference name="windows-target-version" value="8.0" />
  <preference name="windows-phone-target-version" value="8.1" />
  <preference name="KeepRunning" value="False" />
  <vs:plugin name="org.apache.cordova.geolocation" version="0.3.10" />
  <vs:plugin name="org.apache.cordova.file" version="1.3.1" />
  <vs:plugin name="org.apache.cordova.console" version="0.2.11" />
  <vs:platformSpecificValues>
    <vs:platformSpecificWidget platformName="windows">
      <vs:name>Bussed</vs:name>
    </vs:platformSpecificWidget>
  </vs:platformSpecificValues>
</widget>